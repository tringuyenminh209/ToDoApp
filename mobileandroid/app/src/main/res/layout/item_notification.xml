<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_md"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/radius_lg"
    app:cardElevation="2dp"
    app:strokeWidth="0.5dp"
    app:strokeColor="@color/line_variant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lg">

        <!-- Type Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/icon_container"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/primary_light"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_notification_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_notifications"
                app:tint="@color/primary"
                android:contentDescription="@string/notification_type_system"
                tools:src="@drawable/ic_check_circle" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Unread Indicator -->
        <View
            android:id="@+id/unread_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ic_circle"
            android:backgroundTint="@color/primary"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/icon_container"
            app:layout_constraintTop_toTopOf="@id/icon_container"
            tools:visibility="visible" />

        <!-- Content Container -->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/icon_container"
            app:layout_constraintEnd_toStartOf="@id/btn_more"
            app:layout_constraintTop_toTopOf="@id/icon_container">

            <!-- Title -->
            <TextView
                android:id="@+id/tv_notification_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Task Reminder" />

            <!-- Message -->
            <TextView
                android:id="@+id/tv_notification_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Your task is scheduled to start in 15 minutes." />

            <!-- Metadata Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Type Badge -->
                <TextView
                    android:id="@+id/tv_notification_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/bg_chip"
                    android:backgroundTint="@color/accent_light"
                    android:textColor="@color/accent"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    tools:text="REMINDER" />

                <!-- Time -->
                <TextView
                    android:id="@+id/tv_notification_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:textColor="@color/text_muted"
                    android:textSize="11sp"
                    tools:text="5 minutes ago" />

            </LinearLayout>

        </LinearLayout>

        <!-- More Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_more"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_more_vertical"
            app:iconSize="20dp"
            app:iconTint="@color/text_muted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
