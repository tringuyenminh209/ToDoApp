<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_path"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:strokeWidth="0.5dp"
    app:strokeColor="@color/line_variant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_target"
                android:tint="@color/text_muted"
                android:padding="10dp"
                android:background="@drawable/icon_background_primary"
                android:layout_marginEnd="12dp" />

            <!-- Title & Description -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_path_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.0"
                    android:layout_marginBottom="6dp"
                    tools:text="Học Full-stack Development" />

                <TextView
                    android:id="@+id/tv_path_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.2"
                    tools:text="Frontend + Backend + Database" />
            </LinearLayout>

            <!-- Status Badge -->
            <LinearLayout
                android:id="@+id/status_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_featured"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="進行中"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:includeFontPadding="false"
                    tools:text="進行中" />
            </LinearLayout>
        </LinearLayout>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Duration -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="4dp"
                    tools:text="240時間" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学習時間"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <!-- Milestones -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_milestones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="4dp"
                    tools:text="5マイルストーン" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="段階"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <!-- Tasks -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tasks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="4dp"
                    tools:text="45タスク" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="タスク"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:includeFontPadding="false" />
            </LinearLayout>
        </LinearLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Progress Bar -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginBottom="8dp"
                app:indicatorColor="@color/primary"
                app:trackColor="@color/line"
                app:trackCornerRadius="4dp"
                tools:progress="65" />

            <!-- Progress Text -->
            <TextView
                android:id="@+id/tv_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="学習期間" />
        </LinearLayout>

        <!-- Bottom Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Usage Count -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_person"
                android:tint="@color/text_muted"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tv_usage_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_muted"
                android:textSize="12sp"
                tools:text="125人が使用中" />

            <!-- Target Date -->
            <TextView
                android:id="@+id/tv_target_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_muted"
                android:textSize="11sp"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="4dp"
                android:drawableTint="@color/text_muted"
                android:visibility="gone"
                tools:text="12/2025" />

            <!-- Action Buttons -->
            <ImageView
                android:id="@+id/btn_more"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_more"
                android:tint="@color/text_muted"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

