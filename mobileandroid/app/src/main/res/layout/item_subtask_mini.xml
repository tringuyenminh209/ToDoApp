<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/indicator"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:cardCornerRadius="9dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/line"
        app:cardBackgroundColor="@color/surface">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check"
            android:contentDescription="@null"
            android:visibility="gone"
            app:tint="@color/white" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_subtask_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/spacing_sm"
        android:textColor="@color/text_muted"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text=""
        tools:text="Xem video bài 1: Giới thiệu OOP" />

    <TextView
        android:id="@+id/tv_subtask_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_sm"
        android:textColor="@color/text_muted"
        android:textSize="11sp"
        android:paddingHorizontal="@dimen/spacing_xs"
        android:paddingVertical="2dp"
        android:background="@drawable/time_badge_background"
        android:visibility="gone"
        tools:text="10p"
        tools:visibility="visible" />

</LinearLayout>

