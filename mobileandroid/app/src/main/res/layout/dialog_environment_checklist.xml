<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/environment_checklist"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/environment_checklist_desc"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <!-- Progress Text -->
    <TextView
        android:id="@+id/tv_checklist_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checks_remaining"
        android:textColor="@color/primary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Checklist Items -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Quiet Space -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/check_quiet_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_quiet_space"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:padding="12dp" />

            <!-- Phone Silent -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/check_phone_silent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_phone_silent"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:padding="12dp" />

            <!-- Materials Ready -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/check_materials_ready"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_materials_ready"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:padding="12dp" />

            <!-- Water/Coffee Ready -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/check_water_coffee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_water_coffee"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:padding="12dp" />

            <!-- Comfortable Position -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/check_comfortable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_comfortable"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:padding="12dp" />

            <!-- Notifications Off -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/check_notifications_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_notifications_off"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:padding="12dp" />

            <!-- Notes -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/environment_notes"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_checklist_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_skip"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip_checklist"
            android:textColor="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/start_focus_session"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary"
            app:icon="@drawable/ic_play" />

    </LinearLayout>

</LinearLayout>
