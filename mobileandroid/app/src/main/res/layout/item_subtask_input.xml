<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_md"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/line">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lg">

        <!-- Drag Handle -->
        <ImageView
            android:id="@+id/iv_drag_handle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_drag_handle"
            android:contentDescription="@string/drag_to_reorder"
            app:tint="@color/text_muted"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Subtask Number Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/subtask_number_badge"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/spacing_sm"
            app:cardBackgroundColor="@color/primary_light"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toEndOf="@id/iv_drag_handle"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_subtask_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="1" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Remove Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_remove"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:contentDescription="@string/remove"
            app:backgroundTint="@color/error_light"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_close"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="18dp"
            app:iconTint="@color/error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Subtask Title Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_subtask"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:hint="@string/subtask_title_hint"
            app:boxBackgroundColor="@color/surface"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/text_muted"
            app:hintTextColor="@color/text_secondary"
            app:startIconDrawable="@drawable/ic_checklist"
            app:startIconTint="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtask_number_badge">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_subtask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="3"
                android:minLines="1"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                tools:text="Complete the first chapter" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Time Section -->
        <LinearLayout
            android:id="@+id/time_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_subtask">

            <!-- Time Label Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_sm">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_clock"
                    app:tint="@color/accent"
                    android:contentDescription="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:text="@string/estimated_time"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Time Input and Quick Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Time Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_time"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/minutes"
                    app:boxBackgroundColor="@color/surface"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxStrokeColor="@color/accent"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="@color/text_muted"
                    app:suffixText="åˆ†"
                    app:suffixTextColor="@color/text_secondary"
                    app:startIconDrawable="@drawable/ic_clock"
                    app:startIconTint="@color/accent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:paddingVertical="14dp"
                        tools:text="15" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Quick Time Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_5"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="56dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:text="5"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    app:backgroundTint="@color/surface"
                    app:cornerRadius="10dp"
                    app:strokeColor="@color/line"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_10"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="56dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:text="10"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    app:backgroundTint="@color/surface"
                    app:cornerRadius="10dp"
                    app:strokeColor="@color/line"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_time_15"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="56dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:text="15"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    app:backgroundTint="@color/surface"
                    app:cornerRadius="10dp"
                    app:strokeColor="@color/line"
                    app:strokeWidth="1dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
