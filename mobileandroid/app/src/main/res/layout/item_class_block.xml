<?xml version="1.0" encoding="utf-8"?>
<!-- Class Block View for Timetable Cell -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/class_block"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/primary"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:strokeColor="@color/primary_alpha_12"
    app:strokeWidth="1dp"
    app:rippleColor="@color/primary_alpha_12"
    app:useCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IT作品開発"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="3"
            android:ellipsize="end"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="9sp"
            app:autoSizeMaxTextSize="11sp"
            app:autoSizeStepGranularity="1sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_class_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1603"
            android:textColor="#CCFFFFFF"
            android:textSize="9sp"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeMaxTextSize="9sp"
            app:autoSizeStepGranularity="1sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
