<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.activities.TimetableActivity">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/header_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_lg">

                    <!-- Back Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_back"
                        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_arrow_back"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="20dp"
                        app:iconTint="@color/text_primary"
                        app:backgroundTint="@color/surface"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/line"
                        app:strokeWidth="1dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tv_header_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/timetable_title"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/spacing_md"
                        app:layout_constraintStart_toEndOf="@id/btn_back"
                        app:layout_constraintEnd_toStartOf="@id/btn_add_class"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <!-- Add Class Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_class"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/timetable_add_class"
                        android:textSize="12sp"
                        android:paddingHorizontal="@dimen/spacing_md"
                        app:icon="@drawable/ic_add"
                        app:iconSize="16dp"
                        app:backgroundTint="@color/primary"
                        app:cornerRadius="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Current Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/current_status_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_lg"
                    android:gravity="center_vertical">

                    <!-- Status Icon -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/status_icon_container"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="#33FFFFFF"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/img_status_icon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/white"
                            android:contentDescription="@string/timetable_status_icon" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Status Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/spacing_md">

                        <TextView
                            android:id="@+id/tv_status_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/timetable_no_class"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_status_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/timetable_break_time"
                            android:textColor="#CCFFFFFF"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Time Display -->
                    <TextView
                        android:id="@+id/tv_status_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Week Navigation -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/week_nav_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_md"
                    android:gravity="center_vertical">

                    <!-- Previous Week Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_prev_week"
                        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_arrow_back"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="18dp"
                        app:iconTint="@color/text_primary"
                        app:backgroundTint="@color/surface"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/line"
                        app:strokeWidth="1dp" />

                    <!-- Week Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_week_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/timetable_week_1"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_week_dates"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/timetable_date_range"
                            android:textColor="@color/text_muted"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Next Week Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_next_week"
                        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="18dp"
                        app:iconTint="@color/text_primary"
                        app:backgroundTint="@color/surface"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/line"
                        app:strokeWidth="1dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Study Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/study_section_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_md">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/timetable_study_section"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_study"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/timetable_add_study"
                            android:textSize="12sp"
                            android:paddingHorizontal="@dimen/spacing_md"
                            app:icon="@drawable/ic_add"
                            app:iconSize="14dp"
                            app:backgroundTint="@color/primary"
                            app:cornerRadius="10dp" />

                    </LinearLayout>

                    <!-- Study List (RecyclerView) -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_study_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_study"
                        tools:itemCount="3" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Timetable Grid -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/timetable_grid_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Timetable Header (Days) -->
                    <LinearLayout
                        android:id="@+id/timetable_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/timetable_header_background"
                        android:paddingVertical="@dimen/spacing_sm">

                        <!-- Period Label -->
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="@string/timetable_period"
                            android:textColor="@color/text_muted"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <!-- Days -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/timetable_sun"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:paddingVertical="4dp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/timetable_mon"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:paddingVertical="4dp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/timetable_tue"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:paddingVertical="4dp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/timetable_wed"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:paddingVertical="4dp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/timetable_thu"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:paddingVertical="4dp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/timetable_fri"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:paddingVertical="4dp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/timetable_sat"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:letterSpacing="0.02"
                            android:paddingVertical="4dp"
                            android:textStyle="bold"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Timetable Grid (RecyclerView for periods) -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_timetable_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_timetable_period"
                        tools:itemCount="5" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="8dp"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:itemRippleColor="@color/bottom_nav_ripple"
        app:itemActiveIndicatorStyle="@null"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
