<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="80dp">

    <!-- Step Title -->
    <TextView
        android:id="@+id/tv_step_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_step1_title"
        android:textAlignment="center"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:lineSpacingExtra="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Step Description -->
    <TextView
        android:id="@+id/tv_step_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_md"
        android:text="@string/onboarding_step1_description"
        android:textAlignment="center"
        android:textColor="@color/text_secondary"
        android:textSize="15sp"
        android:lineSpacingExtra="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_step_title" />

    <!-- Goal Grid -->
    <GridLayout
        android:id="@+id/goal_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_2xl"
        android:columnCount="3"
        android:rowCount="1"
        app:layout_constraintTop_toBottomOf="@id/tv_step_description">

        <!-- Goal Card: Learning -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_goal_learning"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/spacing_xs"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/goal_card_selector"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <!-- Icon -->
                <ImageView
                    android:layout_width="@dimen/icon_size_lg"
                    android:layout_height="@dimen/icon_size_lg"
                    android:contentDescription="@string/goal_learning"
                    android:src="@drawable/ic_book"
                    app:tint="@color/primary" />

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="@string/goal_learning"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Goal Card: Work -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_goal_work"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/spacing_xs"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/goal_card_selector"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <!-- Icon -->
                <ImageView
                    android:layout_width="@dimen/icon_size_lg"
                    android:layout_height="@dimen/icon_size_lg"
                    android:contentDescription="@string/goal_work"
                    android:src="@drawable/ic_briefcase"
                    app:tint="@color/primary" />

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="@string/goal_work"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Goal Card: Health -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_goal_health"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/spacing_xs"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/goal_card_selector"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <!-- Icon -->
                <ImageView
                    android:layout_width="@dimen/icon_size_lg"
                    android:layout_height="@dimen/icon_size_lg"
                    android:contentDescription="@string/goal_health"
                    android:src="@drawable/ic_heart"
                    app:tint="@color/primary" />

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="@string/goal_health"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

