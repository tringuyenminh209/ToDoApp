<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.activities.EditTaskActivity">

    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_lg">

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:contentDescription="@string/back"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_arrow_back"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="24dp"
                app:iconTint="@color/text_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp" />

            <!-- Logo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logo_container"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/spacing_md"
                app:cardBackgroundColor="@color/primary_light"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toEndOf="@id/btn_back"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_logo"
                    android:contentDescription="@string/app_name" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:text="Chỉnh sửa Task"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/header_actions"
                app:layout_constraintStart_toEndOf="@id/logo_container"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Header Actions -->
            <LinearLayout
                android:id="@+id/header_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Delete Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:contentDescription="Xóa task"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_more"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="20dp"
                    app:iconTint="@color/error"
                    app:strokeWidth="0dp" />

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/spacing_md"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <!-- Basic Information Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/basic_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <!-- Section Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_task"
                            android:contentDescription="@null"
                            app:tint="@color/text_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:text="@string/basic_information"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Task Title -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_task_title"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        android:hint="@string/task_title_hint"
                        app:boxBackgroundColor="@color/surface"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxStrokeColor="@color/line"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/text_secondary"
                        app:startIconDrawable="@drawable/ic_edit"
                        app:startIconTint="@color/text_muted"
                        app:startIconContentDescription="@string/task_title_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_task_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences"
                            android:maxLines="2"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:paddingStart="@dimen/spacing_xxxl" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Task Description -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_task_description"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ghi chú"
                        app:boxBackgroundColor="@color/surface"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxStrokeColor="@color/line"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/text_secondary"
                        app:startIconDrawable="@drawable/ic_description"
                        app:startIconTint="@color/text_muted"
                        app:startIconContentDescription="Ghi chú">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_task_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences|textMultiLine"
                            android:maxLines="4"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:paddingStart="@dimen/spacing_xxxl" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Priority & Time Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/priority_time_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <!-- Section Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_settings"
                            android:contentDescription="@null"
                            app:tint="@color/text_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:text="@string/priority_and_time"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Priority Selection - 5 Levels -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/priority"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <!-- Priority 1 - Lowest -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_priority_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_xs"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/priority_card_selector"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/text_muted">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/spacing_md">

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/circle_background"
                                    android:backgroundTint="@color/text_muted" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_xs"
                                    android:text="1"
                                    android:textColor="@color/text_primary"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Priority 2 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_priority_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/spacing_xs"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/priority_card_selector"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/success">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/spacing_md">

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/circle_background"
                                    android:backgroundTint="@color/success" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_xs"
                                    android:text="2"
                                    android:textColor="@color/text_primary"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Priority 3 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_priority_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/spacing_xs"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/priority_card_selector"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/warning">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/spacing_md">

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/circle_background"
                                    android:backgroundTint="@color/warning" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_xs"
                                    android:text="3"
                                    android:textColor="@color/text_primary"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Priority 4 -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_priority_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/spacing_xs"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/priority_card_selector"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="#F97316">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/spacing_md">

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/circle_background"
                                    android:backgroundTint="#F97316" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_xs"
                                    android:text="4"
                                    android:textColor="@color/text_primary"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Priority 5 - Highest -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_priority_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/priority_card_selector"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/error">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="@dimen/spacing_md">

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/circle_background"
                                    android:backgroundTint="@color/error" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_xs"
                                    android:text="5"
                                    android:textColor="@color/text_primary"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- Estimated Time -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/estimated_time"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Time Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_estimated_time"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_sm"
                            android:hint="@string/time_hint"
                            app:boxBackgroundColor="@color/surface"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxStrokeColor="@color/line"
                            app:boxStrokeWidth="1dp"
                            app:boxStrokeWidthFocused="2dp"
                            app:startIconDrawable="@drawable/ic_clock"
                            app:startIconTint="@color/text_muted"
                            app:startIconContentDescription="@string/time_hint">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_estimated_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:paddingStart="@dimen/spacing_xxxl" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Time Unit Spinner -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/surface"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/line"
                            app:strokeWidth="1dp">

                            <Spinner
                                android:id="@+id/spinner_time_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/spacing_md"
                                android:paddingVertical="@dimen/spacing_sm"
                                android:background="@android:color/transparent" />

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Deadline Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/deadline_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <!-- Section Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            android:contentDescription="@null"
                            app:tint="@color/text_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:text="@string/deadline"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Deadline Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_deadline"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/deadline_hint"
                        app:boxBackgroundColor="@color/surface"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxStrokeColor="@color/line"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_calendar"
                        app:endIconTint="@color/primary"
                        app:hintTextColor="@color/text_secondary"
                        app:startIconDrawable="@drawable/ic_clock"
                        app:startIconTint="@color/text_muted"
                        app:startIconContentDescription="@string/deadline_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_deadline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:paddingStart="@dimen/spacing_xxxl" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Quick Deadline Options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_today"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_xs"
                            android:text="@string/today"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:paddingVertical="@dimen/spacing_sm"
                            app:backgroundTint="@color/surface"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/line"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_tomorrow"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="@dimen/spacing_xs"
                            android:text="@string/tomorrow"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:paddingVertical="@dimen/spacing_sm"
                            app:backgroundTint="@color/surface"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/line"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_next_week"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:text="@string/next_week"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:paddingVertical="@dimen/spacing_sm"
                            app:backgroundTint="@color/surface"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/line"
                            app:strokeWidth="1dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- AI Support Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ai_support_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <!-- Section Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chat"
                            android:contentDescription="@null"
                            app:tint="@color/primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:text="@string/ai_support"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/beta"
                            android:textColor="@color/accent"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:background="@drawable/beta_badge_background"
                            android:paddingHorizontal="@dimen/spacing_xs"
                            android:paddingVertical="2dp" />

                    </LinearLayout>

                    <!-- AI Suggestions -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ai_suggestions"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <!-- AI Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/spacing_md">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_ai_breakdown"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_sm"
                            android:text="@string/ai_breakdown_task"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:paddingVertical="@dimen/spacing_md"
                            app:backgroundTint="@color/surface"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_lightning"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/spacing_sm"
                            app:iconSize="16dp"
                            app:iconTint="@color/accent"
                            app:strokeColor="@color/line"
                            app:strokeWidth="1dp" />

                    </LinearLayout>

                    <!-- AI Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/ai_status_background"
                        android:padding="@dimen/spacing_sm">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_info"
                            android:contentDescription="@null"
                            app:tint="@color/accent" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:text="@string/ai_status_info"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Subtasks Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/subtasks_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/radius_lg"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_list"
                            android:contentDescription="@null"
                            app:tint="@color/text_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:text="@string/subtasks"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_subtask"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:contentDescription="@string/add_subtask"
                            app:backgroundTint="@color/primary_light"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_add"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="20dp"
                            app:iconTint="@color/primary"
                            app:strokeWidth="0dp" />

                    </LinearLayout>

                    <!-- Subtasks List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_subtasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_subtask_input" />

                    <!-- Empty State -->
                    <LinearLayout
                        android:id="@+id/empty_subtasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/spacing_xl"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_list"
                            android:alpha="0.6"
                            android:contentDescription="@string/no_subtasks"
                            app:tint="@color/text_muted" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_md"
                            android:text="@string/no_subtasks"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="@string/no_subtasks_description"
                            android:textColor="@color/text_muted"
                            android:textSize="14sp"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
