<?xml version="1.0" encoding="utf-8"?>
<!-- Item for Timetable Period Row -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/period_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="70dp">

    <!-- Period Number -->
    <TextView
        android:id="@+id/tv_period_number"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:text="1"
        android:textColor="@color/text_secondary"
        android:textSize="11sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/timetable_period_label_background"
        android:letterSpacing="0.02"
        tools:ignore="HardcodedText" />

    <!-- Day Cells Container (7 days) -->
    <LinearLayout
        android:id="@+id/day_cells_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Day 1 (Sunday) -->
        <FrameLayout
            android:id="@+id/cell_day_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/timetable_cell_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <!-- Class block will be added programmatically -->

        </FrameLayout>

        <!-- Day 2 (Monday) -->
        <FrameLayout
            android:id="@+id/cell_day_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/timetable_cell_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Day 3 (Tuesday) -->
        <FrameLayout
            android:id="@+id/cell_day_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/timetable_cell_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Day 4 (Wednesday) -->
        <FrameLayout
            android:id="@+id/cell_day_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/timetable_cell_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Day 5 (Thursday) -->
        <FrameLayout
            android:id="@+id/cell_day_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/timetable_cell_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Day 6 (Friday) -->
        <FrameLayout
            android:id="@+id/cell_day_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/timetable_cell_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Day 7 (Saturday) -->
        <FrameLayout
            android:id="@+id/cell_day_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/timetable_cell_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

    </LinearLayout>

</LinearLayout>
