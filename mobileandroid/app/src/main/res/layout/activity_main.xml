<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.activities.MainActivity">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Enhanced Design -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/header_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginTop="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_lg">

                    <!-- Logo -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/logo_container"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardBackgroundColor="@color/primary_light"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:id="@+id/app_logo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_logo"
                            android:contentDescription="@string/app_name"
                             />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Title & Greeting -->
                    <LinearLayout
                        android:id="@+id/title_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/spacing_md"
                        app:layout_constraintStart_toEndOf="@id/logo_container"
                        app:layout_constraintEnd_toStartOf="@id/actions_container"
                        app:layout_constraintTop_toTopOf="@id/logo_container"
                        app:layout_constraintBottom_toBottomOf="@id/logo_container">


                        <TextView
                            android:id="@+id/tv_header_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_today"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_header_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_date_placeholder"
                            android:textColor="@color/text_muted"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Actions -->
                    <LinearLayout
                        android:id="@+id/actions_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <!-- Language Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_language"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:padding="0dp"
                            android:text="VI"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/surface"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/line"
                            app:strokeWidth="1dp" />

                        <!-- Notification Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_notification"
                            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:icon="@drawable/ic_notifications"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="20dp"
                            app:iconTint="@color/text_primary"
                            app:backgroundTint="@color/surface"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/line"
                            app:strokeWidth="1dp" />

                        <!-- Add Task Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_task"
                            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:icon="@drawable/ic_add"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="20dp"
                            app:iconTint="@color/text_primary"
                            app:backgroundTint="@color/surface"
                            app:cornerRadius="12dp"
                            app:strokeColor="@color/line"
                            app:strokeWidth="1dp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Progress Ring Section with Enhanced Design -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/progress_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg"
                    android:animateLayoutChanges="true">

                    <!-- Progress Ring -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clipToPadding="false">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progress_ring"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:indicatorSize="160dp"
                            app:indicatorInset="8dp"
                            app:trackThickness="14dp"
                            app:trackColor="@color/line"
                            app:trackCornerRadius="7dp"
                            app:indicatorColor="@color/primary" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_progress_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45%"
                                android:textColor="@color/text_primary"
                                android:textSize="32sp"
                                android:letterSpacing="0.02"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_progress_caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/main_progress_today"
                                android:textColor="@color/text_muted"
                                android:textSize="12sp"
                                android:textAllCaps="false"
                                android:letterSpacing="0.02" />

                        </LinearLayout>

                    </FrameLayout>

                    <!-- Progress Stats Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_lg"
                        android:orientation="horizontal"
                        android:background="@color/surface"
                        android:padding="@dimen/spacing_md"
                        android:gravity="center">

                        <!-- Tasks Completed -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginBottom="4dp"
                                android:src="@drawable/ic_task"
                                android:contentDescription="@null"
                                app:tint="@color/accent" />

                            <TextView
                                android:id="@+id/tv_tasks_completed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/main_tasks_completed"
                                android:textColor="@color/text_muted"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@color/line" />

                        <!-- Focus Time -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginBottom="4dp"
                                android:src="@drawable/ic_clock"
                                android:contentDescription="@null"
                                app:tint="@color/accent" />

                            <TextView
                                android:id="@+id/tv_focus_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2h 15m"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/main_focus_time"
                                android:textColor="@color/text_muted"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@color/line" />

                        <!-- Streak -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginBottom="4dp"
                                android:src="@drawable/ic_sun"
                                android:contentDescription="@null"
                                app:tint="@color/accent" />

                            <TextView
                                android:id="@+id/tv_streak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="@string/main_streak_days"
                                android:textColor="@color/text_muted"
                                android:textSize="11sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Progress Links -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_view_stats"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:text="@string/main_view_stats"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:textAllCaps="false"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="13sp"
                            app:autoSizeStepGranularity="1sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/surface"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_stats"
                            app:iconSize="16dp"
                            app:iconTint="@color/text_primary"
                            app:strokeColor="@color/line"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_view_timetable"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="@string/main_timetable"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:textAllCaps="false"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeMaxTextSize="13sp"
                            app:autoSizeStepGranularity="1sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/surface"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_calendar"
                            app:iconSize="16dp"
                            app:iconTint="@color/text_primary"
                            app:strokeColor="@color/line"
                            app:strokeWidth="1dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Daily Actions with Enhanced Design -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/daily_actions_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_lg">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_checkin"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/main_checkin"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lineSpacingExtra="1dp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="9sp"
                        app:autoSizeMaxTextSize="12sp"
                        app:autoSizeStepGranularity="1sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/surface"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_sun"
                        app:iconSize="20dp"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        app:iconTint="@color/text_muted"
                        app:strokeColor="@color/line"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_review"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="@string/main_review"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lineSpacingExtra="1dp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="9sp"
                        app:autoSizeMaxTextSize="12sp"
                        app:autoSizeStepGranularity="1sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/primary"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_moon"
                        app:iconSize="20dp"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        app:iconTint="@color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_ai_coach"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_ai_coach"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lineSpacingExtra="1dp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="9sp"
                        app:autoSizeMaxTextSize="12sp"
                        app:autoSizeStepGranularity="1sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/surface"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_chat"
                        app:iconSize="20dp"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        app:iconTint="@color/text_muted"
                        app:strokeColor="@color/line"
                        app:strokeWidth="1dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions with Enhanced Design -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/quick_actions_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_lg">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_ai_arrange"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/main_ai_arrange"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lineSpacingExtra="1dp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="9sp"
                        app:autoSizeMaxTextSize="12sp"
                        app:autoSizeStepGranularity="1sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/surface"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_lightning"
                        app:iconSize="20dp"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        app:iconTint="@color/text_primary"
                        app:strokeColor="@color/line"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_start_5min"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="@string/main_start_5min"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lineSpacingExtra="1dp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="9sp"
                        app:autoSizeMaxTextSize="12sp"
                        app:autoSizeStepGranularity="1sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/primary"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_play"
                        app:iconSize="20dp"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        app:iconTint="@color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_reschedule"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_reschedule"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lineSpacingExtra="1dp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="9sp"
                        app:autoSizeMaxTextSize="12sp"
                        app:autoSizeStepGranularity="1sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/surface"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_clock"
                        app:iconSize="20dp"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        app:iconTint="@color/text_primary"
                        app:strokeColor="@color/line"
                        app:strokeWidth="1dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Top 3 Tasks Section with Enhanced Design -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tasks_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_xl"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/line_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_lg">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/main_top3_today"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_view_all_tasks"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_view_all"
                            android:textColor="@color/primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@android:color/transparent"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                    <!-- Tasks RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_tasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_task_card" />

                    <!-- Empty State -->
                    <LinearLayout
                        android:id="@+id/empty_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/spacing_2xl"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_task"
                            android:alpha="0.6"
                            android:contentDescription="@string/main_empty_tasks"
                            app:tint="@color/text_muted" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lg"
                            android:text="@string/main_empty_tasks"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm"
                            android:text="@string/main_empty_tasks_description"
                            android:textColor="@color/text_muted"
                            android:textSize="14sp"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:elevation="8dp"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/bottom_nav_item_color"
            app:itemTextColor="@color/bottom_nav_item_color"
            app:itemRippleColor="@color/bottom_nav_ripple"
            app:itemActiveIndicatorStyle="@null"
            app:menu="@menu/bottom_navigation_menu"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
