<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/line"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Example Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_sm">

            <!-- Title with badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_title"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                app:chipMinHeight="28dp"
                app:chipBackgroundColor="@color/primary_light"
                app:chipCornerRadius="14dp"
                tools:text="hello.php" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Copy Button -->
            <ImageButton
                android:id="@+id/btn_copy"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_category"
                app:tint="@color/text_muted"
                android:contentDescription="@string/copy_code" />

        </LinearLayout>

        <!-- Description (if available) -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Begin with a PHP open tag" />

        <!-- Code Block with Syntax Highlighting -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F8F9FA"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/line"
            app:strokeWidth="1dp">

            <WebView
                android:id="@+id/webview_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="@dimen/spacing_md"
                android:scrollbars="horizontal" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Output (if available) -->
        <LinearLayout
            android:id="@+id/output_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_sm"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/output"
                android:textColor="@color/text_muted"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textColor="@color/success"
                android:textSize="11sp"
                android:background="@color/background"
                android:padding="8dp"
                tools:text="Hello World\nHello quickref.me" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
