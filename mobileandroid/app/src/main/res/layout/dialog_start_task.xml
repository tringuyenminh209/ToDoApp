<?xml version="1.0" encoding="utf-8"?>
<!-- Dialog for selecting task to start -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/spacing_xl">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon and Title Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Icon -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="@color/primary_light"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play"
                    app:tint="@color/primary"
                    android:contentDescription="@string/start_task_dialog_icon" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Title and Subtitle -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/spacing_md">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_task_dialog_title"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_task_dialog_subtitle"
                    android:textColor="@color/text_muted"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Close Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_close"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_close"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="20dp"
                app:iconTint="@color/text_muted" />

        </LinearLayout>

        <!-- Filter Chips -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            app:singleSelection="true"
            app:selectionRequired="false"
            app:chipSpacingHorizontal="@dimen/spacing_sm">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_all"
                android:checked="true"
                app:chipBackgroundColor="@color/chip_background_selector"
                app:chipStrokeColor="@color/line"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_high_priority"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority_high"
                app:chipBackgroundColor="@color/chip_background_selector"
                app:chipStrokeColor="@color/line"
                app:chipStrokeWidth="1dp"
                app:chipIcon="@drawable/ic_flag"
                app:chipIconTint="@color/error" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_quick_tasks"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_task_quick_tasks"
                app:chipBackgroundColor="@color/chip_background_selector"
                app:chipStrokeColor="@color/line"
                app:chipStrokeWidth="1dp"
                app:chipIcon="@drawable/ic_flash"
                app:chipIconTint="@color/accent" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_today"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"
                app:chipBackgroundColor="@color/chip_background_selector"
                app:chipStrokeColor="@color/line"
                app:chipStrokeWidth="1dp"
                app:chipIcon="@drawable/ic_calendar"
                app:chipIconTint="@color/primary" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Task Count and Sort -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/spacing_lg">

            <TextView
                android:id="@+id/tv_task_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/start_task_available_count"
                android:textColor="@color/text_muted"
                android:textSize="13sp"
                tools:text="5 タスク利用可能" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sort"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/start_task_sort"
                android:textSize="12sp"
                app:icon="@drawable/ic_sort"
                app:iconSize="16dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_marginTop="@dimen/spacing_md"
        app:layout_constraintTop_toBottomOf="@id/header_container" />

    <!-- Task List -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxHeight="400dp"
        android:layout_marginTop="@dimen/spacing_md"
        android:fillViewport="false"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toTopOf="@id/bottom_actions"
        app:layout_constraintHeight_max="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Task List RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/spacing_sm"
                tools:listitem="@layout/item_start_task"
                tools:itemCount="5" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_3xl"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_inbox"
                    android:alpha="0.3"
                    app:tint="@color/text_muted"
                    android:contentDescription="@string/start_task_empty_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_task_empty_title"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/spacing_md" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_task_empty_message"
                    android:textColor="@color/text_muted"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/spacing_sm" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Actions -->
    <LinearLayout
        android:id="@+id/bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/spacing_lg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <!-- Quick Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- AI Suggest Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ai_suggest"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_md"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:text="@string/start_task_ai_suggest"
                android:textSize="13sp"
                app:icon="@drawable/ic_sparkle"
                app:iconSize="16dp"
                app:iconTint="@color/accent"
                app:cornerRadius="12dp"
                app:strokeColor="@color/accent"
                app:strokeWidth="1dp" />

            <!-- Create Task Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_create_task"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_md"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="@string/start_task_create_new"
                android:textSize="13sp"
                app:icon="@drawable/ic_add"
                app:iconSize="16dp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
