<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/spacing_xs"
    android:paddingHorizontal="@dimen/spacing_sm">

    <!-- Checkbox Indicator -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/checkbox_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/spacing_sm"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/line"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_circle"
            android:contentDescription="@null"
            app:tint="@color/text_muted" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Subtask Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_subtask_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            tools:text="Xem video bài 1" />

        <!-- Progress Bar (only show if has estimated time and not completed) -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_subtask"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/spacing_xs"
            android:visibility="gone"
            app:indicatorColor="@color/primary"
            app:trackColor="@color/line"
            app:trackCornerRadius="2dp"
            tools:progress="60" />

    </LinearLayout>

    <!-- Time Indicator -->
    <TextView
        android:id="@+id/tv_subtask_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_sm"
        android:textColor="@color/text_muted"
        android:textSize="12sp"
        tools:text="10分" />

</LinearLayout>

