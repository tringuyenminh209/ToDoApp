<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Main Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- Header -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/header_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_md"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/line"
            app:strokeWidth="0.5dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg"
                android:animateLayoutChanges="true">

                <!-- Month Navigation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Prev Month -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_prev_month"
                        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_arrow_back"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="18dp"
                        app:iconTint="@color/text_primary"
                        app:backgroundTint="@color/surface"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/line"
                        app:strokeWidth="1dp" />

                    <!-- Month/Year Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/spacing_md">

                        <TextView
                            android:id="@+id/tv_month_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="Tháng 10, 2025" />

                        <TextView
                            android:id="@+id/tv_selected_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/text_muted"
                            android:textSize="12sp"
                            tools:text="Đã chọn: 29/10/2025" />

                    </LinearLayout>

                    <!-- Next Month -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_next_month"
                        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="18dp"
                        app:iconTint="@color/text_primary"
                        app:backgroundTint="@color/surface"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/line"
                        app:strokeWidth="1dp" />

                    <!-- Today Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_today"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/calendar_today"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="@dimen/spacing_md"
                        app:icon="@drawable/ic_calendar"
                        app:iconSize="16dp"
                        app:backgroundTint="@color/primary"
                        app:cornerRadius="12dp" />

                </LinearLayout>

                <!-- Calendar View Placeholder -->
                <CalendarView
                    android:id="@+id/calendar_view"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@color/white"
                    android:dateTextAppearance="@android:style/TextAppearance.Small"
                    android:weekSeparatorLineColor="@color/line" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Filter Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/filter_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_sm"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/line"
            app:strokeWidth="0.5dp"
            android:animateLayoutChanges="true"
            app:layout_constraintTop_toBottomOf="@id/header_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Filter Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/calendar_filter_label"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- Task Count Badge -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/primary_light"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/tv_task_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="5 tasks" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/filter_chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="6dp"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_all_tasks"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/calendar_filter_all"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipIcon="@drawable/ic_inbox"
                        app:rippleColor="@color/primary_alpha_12"
                        app:chipStrokeColor="@color/line"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_active_tasks"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calendar_filter_active"
                        app:chipIcon="@drawable/ic_clock"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:rippleColor="@color/primary_alpha_12"
                        app:chipStrokeColor="@color/line"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_completed_tasks"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calendar_filter_completed"
                        app:chipIcon="@drawable/ic_check"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:rippleColor="@color/primary_alpha_12"
                        app:chipStrokeColor="@color/line"
                        app:chipStrokeWidth="1dp" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Tasks Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tasks_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            app:layout_constraintTop_toBottomOf="@id/filter_card">

            <!-- Tasks for Selected Date -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_md"
                android:clipToPadding="false"
                android:paddingBottom="80dp"
                android:nestedScrollingEnabled="false"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="5"
                tools:listitem="@layout/item_task_card" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_2xl"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

            <!-- Empty Icon -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/primary_light"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/calendar_empty_tasks"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/primary" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Empty Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calendar_empty_tasks"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Empty Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:gravity="center"
                android:text="@string/calendar_empty_tasks_description"
                android:textColor="@color/text_muted"
                android:textSize="14sp" />

            <!-- Add Task CTA Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_task_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:paddingHorizontal="@dimen/spacing_2xl"
                android:text="@string/calendar_add_task"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/primary"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lg"
        android:contentDescription="@string/calendar_add_task"
        app:backgroundTint="@color/primary"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
