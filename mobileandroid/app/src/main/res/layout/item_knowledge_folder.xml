<?xml version="1.0" encoding="utf-8"?>
<!-- Knowledge Folder Item (Category as Folder) -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/folder_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/line"
    app:strokeWidth="0.5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <!-- Folder Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/icon_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/primary_light"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_folder_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:contentDescription="@string/folder"
                android:src="@drawable/ic_folder"
                app:tint="@color/primary" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Folder Name -->
        <TextView
            android:id="@+id/tv_folder_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_md"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/icon_container"
            app:layout_constraintEnd_toStartOf="@id/tv_item_count"
            app:layout_constraintTop_toTopOf="@id/icon_container"
            tools:text="Python" />

        <!-- Folder Description -->
        <TextView
            android:id="@+id/tv_folder_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_muted"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/tv_folder_name"
            app:layout_constraintEnd_toEndOf="@id/tv_folder_name"
            app:layout_constraintTop_toBottomOf="@id/tv_folder_name"
            tools:visibility="visible"
            tools:text="Python programming language" />

        <!-- Item Count Badge -->
        <TextView
            android:id="@+id/tv_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_bg"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/btn_folder_menu"
            app:layout_constraintTop_toTopOf="@id/icon_container"
            app:layout_constraintBottom_toBottomOf="@id/icon_container"
            tools:text="12" />

        <!-- Folder Menu Button -->
        <ImageButton
            android:id="@+id/btn_folder_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/more_options"
            android:src="@drawable/ic_more"
            app:tint="@color/text_muted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon_container"
            app:layout_constraintBottom_toBottomOf="@id/icon_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
