<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/radius_md"
    app:cardElevation="0dp"
    app:strokeColor="@color/line"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Number -->
        <TextView
            android:id="@+id/tv_subtask_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textColor="@color/accent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="12dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_subtask_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="サブタスクタイトル"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <!-- Estimated Time -->
        <TextView
            android:id="@+id/tv_subtask_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30分"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:background="@drawable/bg_time_badge"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

