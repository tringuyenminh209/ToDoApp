<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0.5dp"
    app:strokeColor="@color/line_variant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Number Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/number_badge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/primary_light"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:includeFontPadding="false" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Content -->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/number_badge"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Title and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="マイルストーンのタイトル"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.1"
                    tools:text="マイルストーンのタイトル" />

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="進行中"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/badge_in_progress"
                    android:includeFontPadding="false"
                    tools:text="進行中" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="マイルストーンの説明"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1.2"
                android:visibility="gone"
                tools:text="マイルストーンの説明"
                tools:visibility="visible" />

            <!-- Completed Date -->
            <TextView
                android:id="@+id/tv_completed_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="完了日: 2024-12-01"
                android:textColor="@color/success"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:visibility="gone"
                tools:text="完了日: 2024-12-01"
                tools:visibility="gone" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
