<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/line"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Header: Title + actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/knowledge_title_placeholder" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_favorite"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:icon="@drawable/ic_star"
                app:iconTint="@color/warning"
                app:backgroundTint="@android:color/transparent"
                app:strokeWidth="0dp"
                android:contentDescription="@string/favorite" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_menu"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:icon="@drawable/ic_more_vertical"
                app:iconTint="@color/text_primary"
                app:backgroundTint="@android:color/transparent"
                app:strokeWidth="0dp"
                android:contentDescription="@string/more" />

        </LinearLayout>

        <!-- Chips: type, language -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_meta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:chipSpacingHorizontal="6dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_type"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/knowledge_type_code" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_language"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/knowledge_language_placeholder" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Content preview / answer -->
        <TextView
            android:id="@+id/tv_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:text="@string/knowledge_preview_placeholder" />

        <!-- Tags -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            app:singleLine="true"
            app:chipSpacingHorizontal="6dp"
            tools:childrenSequenceState="true">

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Assist"
                android:text="@string/knowledge_tag_sample1" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Assist"
                android:text="@string/knowledge_tag_sample2" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Footer metadata -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_folder"
                app:tint="@color/text_muted" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/knowledge_category_label"
                android:textColor="@color/text_muted"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/text_muted"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/knowledge_last_review_label"
                android:textColor="@color/text_muted"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_last_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/text_muted"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/knowledge_next_review_label"
                android:textColor="@color/text_muted"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_next_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/text_muted"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


