<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Colored Header Strip -->
        <View
            android:id="@+id/header_strip"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header: Type Badge + Title + Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Type Badge with Icon -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/type_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/primary_light"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="6dp">

                        <ImageView
                            android:id="@+id/iv_type_icon"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_book"
                            app:tint="@color/primary" />

                        <TextView
                            android:id="@+id/chip_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="コード"
                            android:textColor="@color/primary"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Language Chip -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_language"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Java"
                    android:textSize="10sp"
                    app:chipMinHeight="24dp"
                    app:chipBackgroundColor="@color/surface"
                    app:chipCornerRadius="8dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Favorite Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_favorite"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_star"
                    app:iconSize="18dp"
                    app:iconTint="@color/warning"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeWidth="0dp"
                    android:contentDescription="@string/favorite" />

                <!-- Menu Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_menu"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_more_vertical"
                    app:iconSize="18dp"
                    app:iconTint="@color/text_muted"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeWidth="0dp"
                    android:contentDescription="@string/more" />

            </LinearLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="8dp"
                tools:text="Hello Worldの基本" />

            <!-- Content Preview -->
            <TextView
                android:id="@+id/tv_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="10dp"
                tools:text="public class Hello { public static void main(String[] args) { System.out.println(..." />

            <!-- Tags -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:singleLine="true"
                app:chipSpacingHorizontal="6dp">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    app:chipMinHeight="24dp"
                    app:chipBackgroundColor="@color/primary_light"
                    app:chipCornerRadius="8dp"
                    android:text="@string/knowledge_tag_sample1" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    app:chipMinHeight="24dp"
                    app:chipBackgroundColor="@color/primary_light"
                    app:chipCornerRadius="8dp"
                    android:text="@string/knowledge_tag_sample2" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Footer Metadata with Better Icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:background="@color/surface">

                <!-- Category -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_folder"
                        app:tint="@color/text_muted" />

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/text_muted"
                        android:textSize="11sp"
                        tools:text="Java基礎" />

                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="@color/line" />

                <!-- Last Review -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_clock"
                        app:tint="@color/text_muted" />

                    <TextView
                        android:id="@+id/tv_last_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/text_muted"
                        android:textSize="11sp"
                        tools:text="11/01" />

                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="@color/line" />

                <!-- Next Review -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/info" />

                    <TextView
                        android:id="@+id/tv_next_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/info"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:text="11/08" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
