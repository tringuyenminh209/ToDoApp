<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/line"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_xs">

            <!-- Type Icon -->
            <ImageView
                android:id="@+id/iv_type_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_book"
                app:tint="@color/primary" />

            <!-- Type Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_type"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:text="Note"
                android:textSize="10sp"
                app:chipMinHeight="20dp"
                app:chipBackgroundColor="@color/primary_light"
                app:chipCornerRadius="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Expand Icon -->
            <ImageView
                android:id="@+id/iv_expand"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_expand_more"
                app:tint="@color/text_muted" />

        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java基本構文"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/spacing_xs" />

        <!-- Content Preview -->
        <TextView
            android:id="@+id/tv_content_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="変数の宣言、データ型、演算子について学習します..."
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2" />

        <!-- Expandable Content -->
        <LinearLayout
            android:id="@+id/expandable_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_sm"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <!-- Full Content based on type -->
            <!-- For Notes -->
            <TextView
                android:id="@+id/tv_full_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.4"
                android:visibility="gone" />

            <!-- For Code Snippets -->
            <LinearLayout
                android:id="@+id/code_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background"
                android:padding="@dimen/spacing_sm"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_xs">

                    <TextView
                        android:id="@+id/tv_code_language"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Java"
                        android:textColor="@color/primary"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_copy_code"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_category"
                        app:tint="@color/text_muted"
                        android:contentDescription="Copy code" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_code_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:textColor="@color/text_primary"
                        android:textSize="11sp"
                        tools:text="int x = 10;" />

                </HorizontalScrollView>

            </LinearLayout>

            <!-- For Exercises -->
            <LinearLayout
                android:id="@+id/exercise_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="問題:"
                    android:textColor="@color/text_muted"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_xs" />

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_show_answer"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答えを表示"
                    android:textSize="11sp"
                    app:cornerRadius="8dp" />

                <LinearLayout
                    android:id="@+id/answer_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="答え:"
                        android:textColor="@color/success"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_xs" />

                    <TextView
                        android:id="@+id/tv_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- For Resource Links -->
            <LinearLayout
                android:id="@+id/link_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:autoLink="web"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_open_link"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="開く"
                    android:textSize="11sp"
                    app:icon="@drawable/ic_link"
                    app:iconSize="16dp"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
