<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.activities.DailyReviewActivity">

    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_lg">

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:contentDescription="@string/back"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_arrow_back"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="24dp"
                app:iconTint="@color/text_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp" />

            <!-- Logo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logo_container"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/spacing_md"
                app:cardBackgroundColor="@color/primary_light"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toEndOf="@id/btn_back"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_logo"
                    android:contentDescription="@string/app_name" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:text="@string/daily_review_title"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/btn_skip"
                app:layout_constraintStart_toEndOf="@id/logo_container"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Skip Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_skip"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/skip"
                android:textColor="@color/text_muted"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="@dimen/spacing_3xl"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <!-- Welcome Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xl"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xl">

                    <!-- Gradient Icon -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        app:cardBackgroundColor="@color/accent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_night"
                            app:tint="@color/white" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/review_welcome"
                        android:textColor="@color/text_primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:gravity="center"
                        android:text="@string/review_subtitle"
                        android:textColor="@color/text_muted"
                        android:textSize="16sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Mood Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/line"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="@string/review_mood_label"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/mood_chip_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="8dp"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_mood_excellent"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mood_excellent"
                            app:chipIcon="@drawable/ic_star"
                            app:chipIconTint="@color/primary" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_mood_good"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mood_good"
                            app:chipIcon="@drawable/ic_check"
                            app:chipIconTint="@color/success" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_mood_average"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mood_average"
                            app:chipIcon="@drawable/ic_info"
                            app:chipIconTint="@color/accent" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_mood_poor"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mood_poor"
                            app:chipIcon="@drawable/ic_warning"
                            app:chipIconTint="@color/warning" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_mood_terrible"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mood_terrible"
                            app:chipIcon="@drawable/ic_close"
                            app:chipIconTint="@color/error" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Daily Stats Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/line"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        android:text="@string/review_stats_label"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Tasks Completed -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:hint="@string/review_tasks_completed"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:endIconMode="clear_text"
                        app:startIconDrawable="@drawable/ic_check"
                        app:startIconTint="@color/success">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_tasks_completed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLines="1"
                            tools:text="5" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Focus Time Minutes -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/review_focus_time"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:endIconMode="clear_text"
                        app:startIconDrawable="@drawable/ic_timer"
                        app:startIconTint="@color/primary"
                        app:suffixText=" phút">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_focus_time_minutes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLines="1"
                            tools:text="120" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Performance Scores Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/line"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        android:text="@string/review_scores_label"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Productivity Score -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_sm"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/review_productivity_score"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_productivity_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5/10"
                                android:textColor="@color/primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/slider_productivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stepSize="1.0"
                            android:value="5.0"
                            android:valueFrom="1.0"
                            android:valueTo="10.0"
                            app:labelBehavior="gone"
                            app:thumbColor="@color/primary"
                            app:trackColorActive="@color/primary"
                            app:trackColorInactive="@color/line" />

                    </LinearLayout>

                    <!-- Focus Time Score -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_sm"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/review_focus_score"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_focus_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5/10"
                                android:textColor="@color/accent"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/slider_focus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stepSize="1.0"
                            android:value="5.0"
                            android:valueFrom="1.0"
                            android:valueTo="10.0"
                            app:labelBehavior="gone"
                            app:thumbColor="@color/accent"
                            app:trackColorActive="@color/accent"
                            app:trackColorInactive="@color/line" />

                    </LinearLayout>

                    <!-- Task Completion Score -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_sm"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/review_task_completion_score"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_task_completion_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5/10"
                                android:textColor="@color/success"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/slider_task_completion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stepSize="1.0"
                            android:value="5.0"
                            android:valueFrom="1.0"
                            android:valueTo="10.0"
                            app:labelBehavior="gone"
                            app:thumbColor="@color/success"
                            app:trackColorActive="@color/success"
                            app:trackColorInactive="@color/line" />

                    </LinearLayout>

                    <!-- Goal Achievement Score -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_sm"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/review_goal_achievement_score"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_goal_achievement_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5/10"
                                android:textColor="@color/warning"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/slider_goal_achievement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stepSize="1.0"
                            android:value="5.0"
                            android:valueFrom="1.0"
                            android:valueTo="10.0"
                            app:labelBehavior="gone"
                            app:thumbColor="@color/warning"
                            app:trackColorActive="@color/warning"
                            app:trackColorInactive="@color/line" />

                    </LinearLayout>

                    <!-- Work-Life Balance Score -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_sm"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/review_work_life_balance_score"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_work_life_balance_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5/10"
                                android:textColor="@color/primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/slider_work_life_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stepSize="1.0"
                            android:value="5.0"
                            android:valueFrom="1.0"
                            android:valueTo="10.0"
                            app:labelBehavior="gone"
                            app:thumbColor="@color/primary"
                            app:trackColorActive="@color/primary"
                            app:trackColorInactive="@color/line" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Achievements Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/line"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:text="@string/review_achievements_label"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="@string/review_achievements_hint"
                        android:textColor="@color/text_muted"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/achievements_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_achievement"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/add_achievement"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_add"
                        app:strokeColor="@color/primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Challenges Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/line"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:text="@string/review_challenges_label"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="@string/review_challenges_hint"
                        android:textColor="@color/text_muted"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/challenges_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_challenge"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/add_challenge"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_add"
                        app:strokeColor="@color/warning" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Lessons Learned Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/line"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:text="@string/review_lessons_label"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="@string/review_lessons_hint"
                        android:textColor="@color/text_muted"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/lessons_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_lesson"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/add_lesson"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_add"
                        app:strokeColor="@color/accent" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Gratitude Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/line"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:text="@string/review_gratitude_label"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="@string/review_gratitude_hint"
                        android:textColor="@color/text_muted"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/gratitude_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_gratitude"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/add_gratitude"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_add"
                        app:strokeColor="@color/success" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Notes Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/line"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="@string/review_notes_label"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/review_notes_hint"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_notes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:maxLines="6"
                            android:minLines="4" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tomorrow Goals Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/line"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="@string/review_tomorrow_goals_label"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/review_tomorrow_goals_hint"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="@color/accent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_tomorrow_goals"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:maxLines="5"
                            android:minLines="3" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/spacing_lg"
                android:text="@string/review_submit"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/accent"
                app:cornerRadius="24dp"
                app:elevation="2dp"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
