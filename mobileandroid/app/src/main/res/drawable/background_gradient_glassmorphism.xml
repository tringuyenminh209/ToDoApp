<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#667eea"
                android:endColor="#764ba2" />
        </shape>
    </item>
    
    <!-- Decorative radial gradients -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.2"
                android:centerY="0.8"
                android:startColor="#4D7877C6"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.8"
                android:centerY="0.2"
                android:startColor="#4DFF77C6"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="300dp"
                android:centerX="0.4"
                android:centerY="0.4"
                android:startColor="#3378DBFF"
                android:endColor="#00000000" />
        </shape>
    </item>
    
</layer-list>
