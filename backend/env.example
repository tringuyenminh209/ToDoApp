PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# OpenAI / Ollama Configuration
# 同一 Docker 内: OPENAI_BASE_URL=http://ollama:11434/v1
# リモート Ollama (docker-compose.ollama.yml 別サーバー): OLLAMA_BASE_URL=http://<IP>:11434/v1 のみ設定で可
OPENAI_API_KEY=sk-dummy-key
OPENAI_BASE_URL=http://ollama:11434/v1
OLLAMA_BASE_URL=
OPENAI_MODEL=qwen2.5:3b
OPENAI_FALLBACK_MODEL=qwen2.5:3b
OPENAI_ENABLE_FALLBACK=false
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.5
# リモート Ollama は初回ロードが遅いため 300 推奨
OPENAI_TIMEOUT=120
