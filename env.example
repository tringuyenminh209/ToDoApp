# To-Do AI App Environment Configuration
# Copy this file to .env and update the values

# Application
APP_NAME="To-Do AI App"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=todo_app
DB_USERNAME=todo_user
DB_PASSWORD=todo_password

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@todoapp.com
MAIL_FROM_NAME="${APP_NAME}"

# OpenAI Integration
AI_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-org-id
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-sender-id

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
APPLE_REDIRECT_URI=http://localhost:8000/auth/apple/callback

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:8000
SESSION_DOMAIN=localhost

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Broadcasting
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Development Tools
TELESCOPE_ENABLED=true
HORIZON_ENABLED=true

# Security
BCRYPT_ROUNDS=12
JWT_SECRET=your-jwt-secret-key

# File Storage
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# AI Configuration
AI_BREAKDOWN_MAX_SUBTASKS=5
AI_BREAKDOWN_MIN_SUBTASKS=3
AI_PLANNING_MAX_TASKS=20
AI_NUDGE_MAX_LENGTH=200
AI_REVIEW_MAX_LENGTH=500

# Focus Mode
FOCUS_DEFAULT_WORK_TIME=25
FOCUS_DEFAULT_BREAK_TIME=5
FOCUS_LONG_BREAK_TIME=15
FOCUS_LONG_BREAK_INTERVAL=4

# Notifications
NOTIFICATION_MORNING_TIME=08:00
NOTIFICATION_EVENING_TIME=20:00
NOTIFICATION_CHECKIN_REMINDER=true
NOTIFICATION_REVIEW_REMINDER=true

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# Performance
OPCACHE_ENABLED=true
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_MAX_ACCELERATED_FILES=4000

# Timezone
APP_TIMEZONE=Asia/Ho_Chi_Minh

# Locale
APP_LOCALE=vi
APP_FALLBACK_LOCALE=en
